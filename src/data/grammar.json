  "sentenceStructures": {
    "basic": [
      {
        "id": "SV",
        "name": "Subject + Verb",
        "pattern": ["SUBJECT", "VERB"],
        "example": "Dogs run."
      },
      {
        "id": "SVO",
        "name": "Subject + Verb + Object",
        "pattern": ["SUBJECT", "VERB", "OBJECT"],
        "example": "She reads books."
      },
      {
        "id": "SVA",
        "name": "Subject + Verb + Adjective",
        "pattern": ["SUBJECT", "LINKING_VERB", "ADJECTIVE"],
        "example": "The bread is warm."
      },
      {
        "id": "SVOO",
        "name": "Subject + Verb + Indirect Object + Direct Object",
        "pattern": ["SUBJECT", "VERB", "INDIRECT_OBJECT", "DIRECT_OBJECT"],
        "example": "She gave him the toast."
      },
      {
        "id": "SVOC",
        "name": "Subject + Verb + Object + Complement",
        "pattern": ["SUBJECT", "VERB", "OBJECT", "COMPLEMENT"],
        "example": "They called her brilliant."
      }
    ],
    "questions": [
      {
        "id": "YES_NO",
        "name": "Yes/No Question",
        "pattern": ["AUX_VERB", "SUBJECT", "VERB"],
        "example": "Do you know?"
      },
      {
        "id": "WH_QUESTION",
        "name": "Wh- Question",
        "pattern": ["WH_WORD", "AUX_VERB", "SUBJECT", "VERB"],
        "example": "What did she say?"
      },
      {
        "id": "SUBJECT_QUESTION",
        "name": "Subject Question",
        "pattern": ["WH_WORD", "VERB"],
        "example": "Who knows?"
      }
    ]
