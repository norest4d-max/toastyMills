    { "id": "ee-i",    "description": "ee sounds like long-e","pattern": "ee", "replacement": "i"  },
    { "id": "th-d",    "description": "th sounds like d (informal)","pattern": "th","replacement": "d"},
    { "id": "wh-w",    "description": "wh sounds like w",   "pattern": "wh",  "replacement": "w"  }
