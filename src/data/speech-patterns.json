  "flexibleIntentPatterns": [
    {
      "id": "greet",
      "label": "Greeting",
      "patterns": ["hello", "hi", "hey", "hiya", "howdy", "sup", "whats up", "what's up", "yo", "helo", "helo there", "heya", "good morning", "gm", "good afternoon", "good evening"],
      "intent": "greeting"
    },
    {
      "id": "farewell",
      "label": "Farewell",
      "patterns": ["bye", "goodbye", "cya", "c ya", "see ya", "see you", "later", "ttyl", "ttfn", "peace", "take care", "have a good one", "gotta go", "g2g"],
      "intent": "farewell"
    },
    {
      "id": "help_request",
      "label": "Help Request",
      "patterns": ["help", "help me", "i need help", "can you help", "how do i", "how to", "how do you", "what is", "what are", "explain", "tell me", "show me", "i dont understand", "i don't understand", "confused", "lost"],
      "intent": "help_request"
    },
    {
      "id": "thanks",
      "label": "Gratitude",
      "patterns": ["thanks", "thank you", "ty", "thx", "appreciate it", "appreciate that", "cheers", "much appreciated", "thank u", "thnx", "thnks", "thanx"],
      "intent": "gratitude"
    },
    {
      "id": "agree",
      "label": "Agreement",
      "patterns": ["yes", "yeah", "yep", "yup", "sure", "absolutely", "of course", "definitely", "right", "correct", "exactly", "agreed", "totally", "for sure", "ok", "okay", "k", "sounds good", "makes sense"],
      "intent": "agreement"
    },
    {
      "id": "disagree",
      "label": "Disagreement",
      "patterns": ["no", "nope", "nah", "not really", "i disagree", "i don't think so", "i dont think so", "wrong", "incorrect", "that's wrong", "thats wrong", "not true", "false", "negative"],
      "intent": "disagreement"
    },
    {
      "id": "ask_name",
      "label": "Ask for Name",
      "patterns": ["what is your name", "what's your name", "who are you", "tell me your name", "what do i call you", "what should i call you", "your name"],
      "intent": "ask_name"
    },
    {
      "id": "ask_status",
      "label": "Ask for Status",
      "patterns": ["how are you", "how r u", "how are u", "hows it going", "how's it going", "how do you do", "are you okay", "you alright", "u ok"],
      "intent": "ask_status"
    },
    {
      "id": "ask_capability",
      "label": "Ask About Capability",
      "patterns": ["what can you do", "what do you know", "what are you capable of", "show me what you can do", "what are your features", "can you", "are you able to", "is it possible"],
      "intent": "ask_capability"
    }
  ],
  "fuzzyMatchConfig": {
    "description": "Configuration for flexible/fuzzy word matching to handle misspellings and typos.",
    "maxEditDistance": 2,
    "minWordLength": 4,
    "ignoreCase": true,
    "trimPunctuation": true,
    "normalizeContractions": true,
    "expandSlang": true,
    "phonemeNormalize": false
  },
  "tokenizationRules": {
    "splitOn": [" ", "\t", "\n", ",", ".", "!", "?", ";", ":"],
    "keepWith": ["'", "-"],
    "stripLeading": ["(", "[", "{", "\"", "'"],
    "stripTrailing": [")", "]", "}", "\"", "'", ".", ",", "!", "?", ";", ":"]
  },
